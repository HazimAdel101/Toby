<div class="space-y-12">
    <% collections.forEach(collection => { %>
        <div class="flex items-center justify-between">
            <button class="text-2xl font-semibold text-left mb-4 w-full flex items-center justify-start fade-in"
                onclick="toggleCollection('<%= collection.id %>', this)">
                <span class="mr-2 w-6 h-6 rounded-full flex items-center justify-center bg-slate-600">
                    <img src="/images/arrow.svg" class="w-4 h-4 ease-in-out duration-300 transform rotate-90" alt="arrow" id="arrowIcon<%= collection.id %>">
                </span>
                <%= collection.name %>
            </button>
            <button onclick="populateUpdateForm('<%= collection.id %>', '<%= collection.name %>', '<%= collection.description %>')" data-modal-target="update-modal" data-modal-toggle="update-modal" class="text-white bg-blue-500 hover:bg-blue-700 font-medium rounded-lg text-sm px-4 py-2" type="button">
                Update
            </button>
            <button onclick="confirmDelete('<%= collection.id %>', '<%= collection.name %>')" data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="text-white bg-red-500 hover:bg-red-700 font-medium rounded-lg text-sm px-4 py-2" type="button">
                Delete
            </button>
        </div>
    <% }) %>
</div>
